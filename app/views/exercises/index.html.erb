<div>
<p id="notice"><%= notice %></p>

<h1>Listing Exercises</h1>

<table align="center">
  <thead>
    <tr>
      <th>Hours</th>
      <th>Calories burned (per hour)</th>
      <th>Type of workout</th>
      <th>Date Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.hours %></td>
        <td><%= exercise.number %></td>
        <td> <%= exercise.exercise_type.name %></td>
        <td><%= exercise.created_at.in_time_zone('Eastern Time (US & Canada)') %></td>
        <td><%= link_to 'Show', exercise %></td>
        <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
        <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p>Most recent entry:</p>
<p><%= Exercise.everyday %></p>
<%= link_to 'New Exercise', new_exercise_path %>
<%= link_to 'Back to dashboard', root_path %>
</div>
